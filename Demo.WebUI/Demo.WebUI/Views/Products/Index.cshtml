@model IEnumerable<Demo.Data.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@foreach (var item in Model)
{
    <div id="item.ProductID">
        <div style="float: left"><img src="@Html.DisplayFor(modelItem => item.Image)"/></div>
        <div>
            <h5>@Html.DisplayNameFor(model => model.Name)</h5>
            <h6>@Html.DisplayFor(modelItem => item.Name)</h6>
            <h5>@Html.DisplayNameFor(model => model.Description)</h5>
            <h6>@Html.DisplayFor(modelItem => item.Description)</h6>
            <h5>@Html.DisplayNameFor(model => model.Price)</h5>
            <h6>@Html.DisplayFor(modelItem => item.Price)</h6>
            <h5>@Html.DisplayNameFor(model => model.Category.CategoryName)</h5>
            <h6>@Html.DisplayFor(modelItem => item.Category.CategoryName)</h6>
            <h6>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
            </h6>
        </div>
    </div>
}
